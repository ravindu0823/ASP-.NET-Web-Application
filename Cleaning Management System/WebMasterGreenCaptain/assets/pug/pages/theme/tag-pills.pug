                        .col-sm-12.col-md-6
                          .card
                            .card-header.pb-0
                              h5 Tags with number
                            .card-body
                              a.badge.badge-primary(href='#') 1
                              a.badge.badge-secondary(href='#') 2
                              a.badge.badge-success(href='#') 3
                              a.badge.badge-info(href='#') 4
