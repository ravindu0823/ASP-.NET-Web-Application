- var theme_customizer      = true;
- var tooltip               = true;

doctype html
html(lang='en')
    include ../../components/header-files
    body
        include ../../components/loader
        // page-wrapper Start
        #pageWrapper.page-wrapper
            include ../../components/header
            // Page Body Start
            .page-body-wrapper.horizontal-menu
                include ../../components/sidebar
                .page-body
                    .container-fluid
                        .page-header
                            .row
                                .col-sm-6
                                    h3
                                      | Tag & Pills
                                    ol.breadcrumb
                                      li.breadcrumb-item
                                        a(href='index.html')
                                         | Home
                                      li.breadcrumb-item Base
                                      li.breadcrumb-item.active Tag & Pills
                                .col-sm-6
                                  include ../../components/bookmark
                    // Container-fluid starts
                    .container-fluid
                      .row
                        .col-sm-12.col-md-6
                          .card
                            .card-header.pb-0
                              h5 Contextual variations
                            .card-body
                              span.badge.badge-primary Primary
                              span.badge.badge-secondary Secondary
                              span.badge.badge-success Success
                              span.badge.badge-info Info
                              span.badge.badge-warning.text-dark Warning
